<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hulahoop.blueback.history.model.dao.HistoryMapper">

    <resultMap id="historyResultMap" type="com.hulahoop.blueback.history.model.dto.HistoryResponseDto">
        <id property="transactionNum" column="transation_num"/>

        <result property="memberName" column="member_name"/>
        <result property="merchantName" column="merchant_name"/>

        <result property="amountUsed" column="amount_used"/>
        <result property="paymentDate" column="payment_date"/>
        <result property="status" column="status"/>
        <result property="startDate" column="start_date"/>
        <result property="endDate" column="end_date"/>
    </resultMap>


    <select id="findHistoryByMemberCode" resultMap="historyResultMap">
        SELECT
        t.transation_num,
        m.name AS member_name,
        mc.merchant_name AS merchant_name,
        t.amount_used,
        t.payment_date,
        t.status,
        t.start_date,
        t.end_date
        FROM T_TransactionHistory t
        JOIN T_Member m ON t.member_code = m.member_code
        JOIN T_Merchant mc ON t.merchant_code = mc.merchant_code
        WHERE
        t.member_code = #{memberCode}
        <if test="status != null and status != ''">
            AND t.status = #{status}
        </if>
        ORDER BY
        t.payment_date DESC, t.transation_num DESC
    </select>

</mapper>
